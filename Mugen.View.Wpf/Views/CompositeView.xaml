<UserControl x:Class="Mugen.Views.CompositeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Mugen.Views"
             xmlns:viewModels="clr-namespace:Mugen.ViewModels;assembly=Mugen.PortableCore"
             mc:Ignorable="d"
             d:DataContext="{Binding Source={StaticResource DesignBootstrapper}, Path=CompositeViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ContentPresenter Grid.Row="0"
                          Content="{ViewModelToViewBinding Path=FirstNestedViewModel}" />

        <Grid Grid.Row="1"
              DataContext="{Binding SecondNestedViewModel}">
            <ContentPresenter Content="{ViewModelToViewBinding}" />
        </Grid>

        <local:CompositeNestedView Grid.Row="2"
                                   DataContext="{Binding ThirdNestedViewModel}" />
    </Grid>
</UserControl>
